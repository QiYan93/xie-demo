#!/usr/bin/env node
'use strict';
var program = require('commander');
var fs = require('fs');

var newFiles = require('../lib/new-files');

/* 命令定义和捕获 */
program
    .option('new [name]', '新建小程序组件文件')
    .version(require('../package.json').version)
    .parse(process.argv); 


var option = process.argv[2];
if(option === 'new'){
    var name = process.argv[3];
    if(name) {
        newFiles(name);
        console.log('新建成功!');
        return;
    }else {
        console.log('请输入文件名, new [name]')
    }
}else{
    program.help();
}